<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            x:Class="ScamMobileApp.Views.Tabbed"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core" 
            xmlns:Pages1="clr-namespace:ScamMobileApp.Views.More" 
            xmlns:Pages2="clr-namespace:ScamMobileApp.Views.Questions" 
            xmlns:Pages3="clr-namespace:ScamMobileApp.Views.Home"
            NavigationPage.HasNavigationBar="False"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="White"
            android:TabbedPage.BarItemColor="{StaticResource TertiaryColor}"
            android:TabbedPage.BarSelectedItemColor="#FA941D">


    <!--Pages can be added as references or inline-->
    <Pages1:MoreMenu Title="Menu" IconImageSource="scammenu.png"></Pages1:MoreMenu>
    <Pages2:QuestionsAndAnswer IconImageSource="qascam.png"></Pages2:QuestionsAndAnswer>
    <Pages3:ShareScamExperience Title="Your Story" IconImageSource="urstory.png"></Pages3:ShareScamExperience>
    <Pages3:Dashboard Title="Home" IconImageSource="scamhome.png"></Pages3:Dashboard>
    
</TabbedPage>