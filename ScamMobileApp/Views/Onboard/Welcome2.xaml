<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScamMobileApp.Views.Onboard.Welcome2"
             BackgroundImageSource="scamwelcome2.png"
             NavigationPage.HasNavigationBar="False">


    <StackLayout VerticalOptions="EndAndExpand" Margin="0,0,0,60">
        <Label Text="Ever met an online millionaire willing to share their wealth with you? Neither have we!" Margin="20,0" TextColor="#ffffff" FontSize="16" FontFamily="Inter-Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"/>

        <Frame Padding="10" CornerRadius="10" BackgroundColor="{StaticResource TertiaryColor}" Margin="50,10">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="To_Register"/>
            </Frame.GestureRecognizers>
            <Label Text="Let's get started" TextColor="#ffffff" FontSize="16" FontFamily="Inter-Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"/>
        </Frame>
    </StackLayout>
</ContentPage>