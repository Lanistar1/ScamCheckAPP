<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:Controls="clr-namespace:ScamMobileApp.Controls"
             x:Class="ScamMobileApp.Views.More.ProfilePage"
             Title="User Profile"
             BackgroundColor="{StaticResource PrimaryColor}">


    <Grid Margin="0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0">
            <!--<Image Source="scamavatar.png"/>

            <Label Text="Upload Image" TextColor="#01FF1A" FontSize="16" FontFamily="Inter-Bold" HorizontalTextAlignment="Center" Margin="0,0,0,10"/>-->
        </StackLayout>

        <ScrollView  Grid.Row="1" Margin="0,20">
            <StackLayout>
                <StackLayout Margin="20,0">
                    <Label Text="First Name" TextColor="{StaticResource SecondaryColor}" FontSize="13"/>
                    <Label Text="{Binding FirstName} " TextColor="{StaticResource SecondaryColor}" FontSize="18"/>
                </StackLayout>
                <Line X1="0"
                      Y1="0"
                      X2="400"
                      Y2="0"
                      Margin="0,0"
                      Grid.Row="6"
                      Stroke="#101137"
                      StrokeDashArray="0,0"
                      StrokeDashOffset="2"/>

                <StackLayout Margin="20,10,0,0">
                    <Label Text="Last Name" TextColor="{StaticResource SecondaryColor}" FontSize="13"/>
                    <Label Text="{Binding LastName}" TextColor="{StaticResource SecondaryColor}" FontSize="18"/>
                </StackLayout>
                <Line X1="0"
                      Y1="0"
                      X2="400"
                      Y2="0"
                      Margin="0,0"
                      Grid.Row="6"
                      Stroke="#101137"
                      StrokeDashArray="0,0"
                      StrokeDashOffset="2"/>

                <StackLayout Margin="20,10,0,0">
                    <Label Text="Email" TextColor="{StaticResource SecondaryColor}" FontSize="13"/>
                    <Label Text="{Binding Email}" TextColor="{StaticResource SecondaryColor}" FontSize="18"/>
                </StackLayout>
                <Line X1="0"
                      Y1="0"
                      X2="400"
                      Y2="0"
                      Margin="0,0"
                      Grid.Row="6"
                      Stroke="#101137"
                      StrokeDashArray="0,0"
                      StrokeDashOffset="2"/>

                <!--<StackLayout Margin="20,10,0,0">
                    <Label Text="Phone Number" TextColor="#ffffff" FontSize="13"/>
                    <Label Text="+1-432516265336" TextColor="#ffffff" FontSize="18"/>
                </StackLayout>
                <Line X1="0"
                      Y1="0"
                      X2="400"
                      Y2="0"
                      Margin="0,0"
                      Grid.Row="6"
                      Stroke="#ffffff"
                      StrokeDashArray="0,0"
                      StrokeDashOffset="2"/>-->

                <StackLayout Margin="20,10,0,0">
                    <Label Text="User Name" TextColor="{StaticResource SecondaryColor}" FontSize="13"/>
                    <Label Text="{Binding UserName}" TextColor="{StaticResource SecondaryColor}" FontSize="18"/>
                </StackLayout>
                <Line X1="0"
                      Y1="0"
                      X2="400"
                      Y2="0"
                      Margin="0,0"
                      Grid.Row="6"
                      Stroke="#101137"
                      StrokeDashArray="0,0"
                      StrokeDashOffset="2"/>

                <StackLayout Margin="20,10,0,0">
                    <Label Text="Role" TextColor="{StaticResource SecondaryColor}" FontSize="13"/>
                    <Label Text="{Binding Role}" TextColor="{StaticResource SecondaryColor}" FontSize="18"/>
                </StackLayout>
                <Line X1="0"
                      Y1="0"
                      X2="400"
                      Y2="0"
                      Margin="0,0"
                      Grid.Row="6"
                      Stroke="#101137"
                      StrokeDashArray="0,0"
                      StrokeDashOffset="2"/>

                <!--<Frame CornerRadius="10" BackgroundColor="{StaticResource TertiaryColor}" Padding="10,12" Margin="20,20,20,20">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer/>
                    </Frame.GestureRecognizers>
                    <Label Text="Save Changes" TextColor="White" FontSize="18" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                </Frame>-->
            </StackLayout>
        </ScrollView>

    </Grid>
</ContentPage>