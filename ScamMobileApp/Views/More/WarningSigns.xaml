<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScamMobileApp.Views.More.WarningSigns"
             Title="Warning Signs"
             BackgroundColor="{StaticResource PrimaryColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <Label Text="Below are some common warning signs that you should look out for when you suspect that you may be targeted by a scam or fraud:" TextColor="#ffffff" FontSize="14" FontFamily="Inter-Regular" 
                   HorizontalTextAlignment="Start" Margin="0,0,0,0" Padding="20,0,20,10" BackgroundColor="{StaticResource SecondaryColor}"/>
        </StackLayout>
        <ScrollView VerticalScrollBarVisibility="Never" Grid.Row="1">
            <StackLayout Margin="0,0,0,10">
                <StackLayout Margin="20,10" Spacing="0">
                    <Grid>
                        <Frame Padding="10,15" BackgroundColor="{StaticResource SecondaryColor}" CornerRadius="10" Margin="0,5" IsVisible="{Binding SolicitVisible}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowSolicitCommand}"/>
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0">
                                    <Image Source="scamsign.png" WidthRequest="30" HeightRequest="30" />
                                </StackLayout>
                                <FlexLayout JustifyContent="SpaceBetween" AlignContent="Center" AlignItems="Center" Grid.Column="1">
                                    <Label Text="Unsolicited communication" TextColor="#ffffff" FontSize="16" FontFamily="Inter-Mediun" HorizontalTextAlignment="Start" Margin="0,0,0,0"/>
                                    <StackLayout>
                                        <ImageButton BackgroundColor="Transparent" Source="scamarrowdown.png" Command="{Binding ShowSolicitCommand}" CommandParameter="{Binding .}"/>
                                    </StackLayout>
                                </FlexLayout>
                            </Grid>
                        </Frame>
                        <Frame Padding="10,15" BackgroundColor="{StaticResource SecondaryColor}" CornerRadius="10" Margin="0,5" IsVisible="{Binding SolicitDetailVisible}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowSolicitDetailCommand}"/>
                            </Frame.GestureRecognizers>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="scamsign.png" VerticalOptions="StartAndExpand" WidthRequest="30" HeightRequest="30"/>
                                <StackLayout >
                                    <FlexLayout JustifyContent="SpaceBetween" AlignContent="Center" AlignItems="Center">
                                        <Label Text="Unsolicited communication" TextColor="#ffffff" FontSize="16" FontFamily="Inter-Bold" HorizontalTextAlignment="Start" Margin="0,0,0,0"/>
                                        <StackLayout>
                                            <ImageButton BackgroundColor="Transparent" Source="scamarrowup.png" Command="{Binding ShowSolicitDetailCommand}" CommandParameter="{Binding .}"/>
                                        </StackLayout>
                                    </FlexLayout>
                                    <Label Text="If someone contacts you out of the blue via phone, email, or social media, offering you an opportunity that seems too good to be true, it may be a scam."
                               TextColor="#ffffff" FontSize="14" FontFamily="Inter-Regular" HorizontalTextAlignment="Start" Margin="0,0,0,0"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </Grid>

